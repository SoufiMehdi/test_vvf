{% extends 'base.html.twig' %}

{% block title %}Faire une demande{% endblock %}

{% block body %}
    {% if not error %}
        <h3>Faire une demande</h3>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.askSubject) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.askEmailApplicant) }}
            </div>
        </div>
        {{ form_row(form.askDescription) }}
        <button type="submit" class="btn btn-outline-success">Enregistrer</button>
        {{ form_end(form) }}
    {% else %}
        <div class="alert alert-danger" role="alert">
            Une error c'est produite veuillez contacter le service informatique Ã  l'adresse : <strong>Info-support@vvf.com</strong>
        </div>
         <p><a href="{{ path('app_aske')}}" class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Voulez-vous refaire une demande</a></p>
    {% endif %}    
{% endblock %}
