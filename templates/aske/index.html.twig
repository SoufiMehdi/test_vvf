{% extends 'base.html.twig' %}

{% block title %}Faire une demande{% endblock %}

{% block body %}
    <h3>Faire une demande</h3>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.askSubject) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.askEmailApplicant) }}
        </div>
    </div>
    {{ form_row(form.askDescription) }}
    <button type="submit" class="btn btn-outline-success">Enregistrer</button>
    {{ form_end(form) }}
{% endblock %}
